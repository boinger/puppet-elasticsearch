# ElasticSearch Service

description     "ElasticSearch"

start on (net-device-up
          and local-filesystems
          and runlevel [2345])

stop on runlevel [016]

respawn limit 10 5

env ES_HOME=<%= @es_home %>
env ES_MIN_MEM=<%= @es_min_mem %>
env ES_MAX_MEM=<%= @es_max_mem %>
env DAEMON="${ES_HOME}/bin/elasticsearch"
env DATA_DIR="${ES_HOME}/data"
env LOG_DIR="${ES_HOME}/logs"
env CONFIG_DIR="${ES_HOME}/config"

console output

script
  if [ -f /etc/default/elasticsearch ]; then
    . /etc/default/elasticsearch
  fi

  su -s /bin/dash -c "${DAEMON} -f -Des.node.master=<%= @es_master_bool %> -Des.path.conf=$CONFIG_DIR -Des.path.home=$ES_HOME -Des.path.logs=$LOG_DIR -Des.path.data=$DATA_DIR -Des.path.work=$WORK_DIR" <%= @run_as_user %>
end script
